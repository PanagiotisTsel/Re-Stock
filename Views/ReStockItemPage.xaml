<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:ReStock.Models"
             x:Class="ReStock.Views.ReStockItemPage"
             Title="Edit Item"
             x:DataType="models:ReStockItem">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <!-- Item Name -->
            <Label Text="Item Name" FontAttributes="Bold"/>
            <Entry Text="{Binding Name, Mode=TwoWay}" Placeholder="Enter item name"/>

            <!-- Quantity -->
            <Label Text="Quantity" FontAttributes="Bold"/>
            <Grid ColumnDefinitions="Auto,*,Auto" Padding="5" BackgroundColor="#89CFF0">
                <Button Grid.Column="0" Text="âˆ’" Clicked="DecreaseQuantity" WidthRequest="50" HeightRequest="50"/>
                <Label Grid.Column="1" Text="{Binding Quantity}" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Button Grid.Column="2" Text="+" Clicked="IncreaseQuantity" WidthRequest="50" HeightRequest="50" BackgroundColor="#4CAF50"/>
            </Grid>

            <!-- Done -->
            <Label Text="Done?" FontAttributes="Bold"/>
            <Switch IsToggled="{Binding Done, Mode=TwoWay}" />

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Text="Save" Clicked="OnSaveClicked" BackgroundColor="#4CAF50" TextColor="White"/>
                <Button Text="Cancel" Clicked="OnCancelClicked" BackgroundColor="#F44336" TextColor="White"/>
            </Grid>

            <!-- Optional Delete Button -->
            <Button Text="Delete" Clicked="OnDeleteClicked" BackgroundColor="#9E9E9E" TextColor="White"/>

        </StackLayout>
    </ScrollView>
</ContentPage>

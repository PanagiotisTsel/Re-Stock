<?xml version="1.0" encoding="utf-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ReStock.Views"
    x:Class="ReStock.AppShell"
    Shell.NavBarIsVisible="False"
    Title = "ReStock">

    <TabBar>

        <!-- Main List Tab -->
        <ShellContent
            Title="ReStock"
            Icon="list.png"
            ContentTemplate="{DataTemplate views:ReStockListPage}" />

        <!-- Settings Tab -->
        <ShellContent
            Title="Settings"
            Icon="settings.png"
            ContentTemplate="{DataTemplate views:ReStockSettings}" />

    </TabBar>

</Shell>
